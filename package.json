{
  "name": "fhir-playwright-automation",
  "version": "1.0.0",
  "description": "API test automation for FHIR workflows using Playwright",
    "type": "module",      
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "PWDEBUG=1 playwright test",
    "trace:open": "playwright show-trace test-results/*.zip || true",
    "report": "playwright show-report",
    "codegen": "playwright codegen"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.8.0",
    "dotenv": "^17.2.3"
  }
}
