{
  "name": "fhir-playwright-automation",
  "version": "1.0.0",
  "description": "API test automation for FHIR workflows using Playwright",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "PWDEBUG=1 playwright test",
    "trace:open": "playwright show-trace test-results/*.zip || true",
    "report": "playwright show-report",
    "codegen": "playwright codegen",
    "lint": "eslint --config eslint.config.mts .",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --config eslint.config.mts --fix",
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.8.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.37.0",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.1"
  }
}
